{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "outDir": "../dist-electron",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "composite": true
    },
    "include": ["./**/*.ts"]
  }